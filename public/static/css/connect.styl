body
    align-items center
    background-color  wait
    margin 0px
    display flex
    justify-content center
    min-height 100vh
    


.mtop16
    margin-top 16px
    .btn
        background-color: #000


.box
    background-color #fff
    border-radius 8px
    border 2px solid #d6d6d6
    position absolute
    width 500px
    .btn-success
        width 100%
        background-color: red
        color #fff
        border 0px
        width 100%
    .form-control
        &:focus
        $:active
            outline  none
            box-shadow none
    .inside
        padding 16px
    .header
        background-color black
        border-radius: 8px 8px 0px 0px
        display flex
        padding 16px
        a
            display flex
            justify-content: center
        
            img
                width 30%
                align-items center


.box_login
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%)

.box_register
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%)

@media only screen and (max-width 728px)
    .box
        width 90%
        .box-login
            position fixed
            top 10%
            left 90%
            transform translate(-100%,-200%)
    .mtop16
        margin-top 16px
        .btn
            display inline-block
            font-size 10px
        
